pip install flask
echo "from flask import Flask" > /root/run.py
echo "app = Flask(__name__)" >> /root/run.py
echo "@app.route('/')" >> /root/run.py
echo "def hello_world():" >> /root/run.py
echo "    return '<h1>Hello World</h1>'" >> /root/run.py
echo "if __name__ == '__main__':" >> /root/run.py
echo "    app.run(debug=True,host='0.0.0.0', port=3000)" >> /root/run.py
python /root/run.py

